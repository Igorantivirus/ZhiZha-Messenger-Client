input[type=text]:invalid:not(:placeholder-shown) {
    border-color: #d9534f;
    background-color: #fdf7f7;
}

input[type=text]::placeholder {
    color: black;
}

.connect-button span { pointer-events: none; }

.connect-button {

    display: flex;
    justify-content: center;
    align-items: center;

    padding: 10px 20px 10px 20px;

    color: black;

    background-color: blue;
    border: 2px black;
    border-radius: 10px;
}

.connect-button:hover {
    background-color: rgb(0, 75, 195);
}

.connect-button:active {
    background-color: rgb(53, 160, 0);
}