<rml>
<head>
	<title>Chat</title>

	<link type="text/rcss" href="rml.rcss" />
	<link type="text/rcss" href="chat-scene.rcss"/>
</head>

<body>

	<div id="app">
		<!-- LEFT: chat list -->
		<div id="sidebar">
			<div id="sidebar_header">Чаты</div>

			<div id="chat_list">
				<div class="chat-item active">
					<div class="chat-title">Общий</div>
					<div class="chat-last">Последнее: «Ок, понял»</div>
				</div>

				<div class="chat-item">
					<div class="chat-title">Поддержка</div>
					<div class="chat-last">Последнее: «Здравствуйте!»</div>
				</div>
			</div>

			<div id="sidebar_footer">
				<button id="open_group_panel">Создать группу</button>
			</div>
		</div>

		<!-- RIGHT: messages -->
		<div id="main">
			<div id="chat_header">
				<div id="chat_name">Общий</div>

				<div id="chat_actions">
					<button id="add_member_btn">Добавить участника в группу</button>
					<button id="leave_group_btn">Покинуть группу</button>
				</div>
			</div>

			<div id="messages"></div>

			<div id="composer">
				<input id="message_input" type="text" value=""/>
				<button id="send_button">Отправить</button>
			</div>
		</div>
	</div>

